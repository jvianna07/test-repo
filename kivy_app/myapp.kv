<MyWidget>:
    orientation: 'vertical'
    padding: 20
    spacing: 10

    TextInput:
        id: entrada
        hint_text: "Digite qualquer coisa..."
        multiline: False
        on_text_validate: root.atualizar_texto(self.text)

    Button:
        text: "Atualizar"
        on_press: root.atualizar_texto(entrada.text)

    Label:
        text: root.texto
        font_size: 24
